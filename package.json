{
  "name": "testimonials-slider",
  "version": "1.1.0",
  "description": "Testimonials slider - Frontendmentor challenge",
  "main": "index.js"
,  "scripts": {
    "sass": "sass src/styles/index.scss dist/styles/index.css",
    "sass:watch": "sass --watch src/styles/index.scss dist/styles/index.css",
    "sass:build": "sass --style=compressed src/styles/index.scss dist/styles/index.min.css",
    "sass:dev": "sass --watch src/styles/index.scss dist/styles/index.css --style=expanded",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "browser-sync": "browser-sync start --server --files '*.html, dist/styles/*.css, src/styles/**/*.scss' --no-notify",
    "dev": "concurrently \"npm run sass:dev\" \"npm run browser-sync\"",
    "build": "npm run sass:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ann-dev/frontend-mentor-challenges.git"
  },
  "keywords": [
    "slider",
    "component"
  ],
  "author": "ann-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ann-dev/frontend-mentor-challenges/issues"
  },
  "homepage": "https://github.com/ann-dev/frontend-mentor-challenges#readme",
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "onchange": "^8.0.0",
    "prettier": "^3.3.3",
    "sass": "^1.91.0",
    "sass-rem": "^4.0.0"
  }
}
